@model UrlItem

<h4>Редактирование URL</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled="True"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LongUrl" class="control-label">URL-адрес</label>
                <input asp-for="LongUrl" class="form-control"/>
                <span asp-validation-for="LongUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary"/>
                <a class="btn btn-primary bg-success" role="button" asp-action="Index">Отмена</a>
            </div>
        </form>
    </div>
</div>